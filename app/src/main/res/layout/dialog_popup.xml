<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/card_background"
        style="@style/Theme.BharatPlus"
        android:layout_marginHorizontal="10dp"
        android:paddingVertical="30dp"
        android:paddingHorizontal="10dp"
        >
        <LinearLayout
            android:id="@+id/llDialogIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_background_error"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tvDialogHeader">
        <ImageView
            android:id="@+id/ivDialogIcon"
            android:layout_width="156dp"
            android:layout_height="156dp"
            android:src="@drawable/baseline_error_outline_24"
            android:layout_gravity="center"
            android:elevation="10dp"
            android:scaleType="centerCrop"
            app:tint="@color/white" />
        </LinearLayout>
        <TextView
            android:id="@+id/tvDialogHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Error Occurred"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/llDialogIcon"
            app:layout_constraintBottom_toTopOf="@id/tvDialogDesc"
            />
        <TextView
            android:id="@+id/tvDialogDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Error Message Here"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/tvDialogHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btnOK"
            android:layout_marginHorizontal="30dp"
            />
        <Button
            android:id="@+id/btnOK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK"
            app:layout_constraintTop_toBottomOf="@id/tvDialogDesc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/white"
            android:background="@drawable/rounded_background_error"
            android:layout_marginTop="10dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>